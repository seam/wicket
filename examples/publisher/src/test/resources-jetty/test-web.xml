<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>weld-scala-publish-wicket-test</display-name>

    <filter>
        <filter-name>Wicket Filter</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>org.jboss.seam.wicket.example.publish.scala.bootstrap.HomePageApplication</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>Wicket Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Jboss AS has a deployer that bootstraps weld, but in jetty we need 
        this listener -->
    <listener>
        <listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
    </listener>

    <resource-env-ref>
        <description>Object factory for the CDI Bean Manager</description>
        <resource-env-ref-name>BeanManager</resource-env-ref-name>
        <resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
    </resource-env-ref>

</web-app>
